{
  "compilerOptions": {
    "allowJs": true,

    "baseUrl": "src/",
    "rootDir": "src/",

    "outDir": "build/",

    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
